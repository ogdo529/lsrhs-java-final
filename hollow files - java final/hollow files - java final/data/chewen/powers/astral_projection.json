{
  "type": "origins:multiple",
  "name": "§d§lAstral Projection§r",
  "description": "§r§7Project your consciousness beyond your sealed body, allowing you to traverse other worlds as an astral form.§r\n\n§e§lUsage§r§7: Press your primary power key while standing on the anchor.§r",
  "badges": [
    {
      "type": "origins:tooltip",
      "sprite": "minecraft:textures/item/ender_eye.png",
      "text": "You leave your body behind and project into another world"
    }
  ],

  "project": {
    "type": "origins:active_self",
    "key": {
      "key": "key.origins.primary_active",
      "continuous": false
    },
    "cooldown": 200,
    "condition": {
      "type": "origins:and",
      "conditions": [
        {
          "type": "origins:dimension",
          "dimension": "seer:seer_pocket_dimension"
        },
        {
            "type": "origins:nbt",
            "nbt": "{Tags:[\"seer_astral\"]}",
            "inverted": true
        },
        {
            "type": "origins:on_block",
            "block_condition": {
                "type": "origins:block",
                "block": "minecraft:respawn_anchor"
            }
        },
        {
            "type": "origins:resource",
            "resource": "seer:astral_energy_energy_resource",
            "comparison": ">=",
            "compare_to": 1200
        }
      ]
    },
    "entity_action": {
      "type": "origins:and",
      "actions": [
        {
          "type": "origins:execute_command",
          "command": "function seer:astral_project"
        }
      ]
    }
  },
  
  "anchor_particles": {
    "type": "origins:action_over_time",
    "interval": 5,
    "entity_action": {
      "type": "origins:and",
      "actions": [
        {
        "type": "origins:execute_command",
        "command": "particle minecraft:portal ~ ~0.1 ~ 0.3 0.1 0.3 0.05 5 force"
        },
        {
        "type": "origins:execute_command",
        "command": "playsound minecraft:entity.allay.ambient_without_item ambient @s ~ ~ ~ 0.5 0.5"
        }
      ]
    },
    "condition": {
      "type": "origins:and",
      "conditions": [
        {
          "type": "origins:dimension",
          "dimension": "seer:seer_pocket_dimension"
        },
        {
          "type": "origins:on_block",
          "block_condition": {
            "type": "origins:block",
            "block": "minecraft:respawn_anchor"
          }
        },
        {
            "type": "origins:resource",
            "resource": "seer:astral_energy_energy_resource",
            "comparison": ">=",
            "compare_to": 1200
        }
      ]
    }
  }
}