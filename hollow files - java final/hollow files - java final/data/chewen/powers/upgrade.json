    "check_upgrade": {
        "type": "origins:action_over_time",
        "interval": 20,
        "entity_action": {
            "type": "origins:execute_command",
            "command": "execute store result score @s seer_amethyst run clear @s minecraft:amethyst_shard 0"
        }
    },
    "give_tag": {
        "type": "origins:active_self",
        "key": {
            "key": "key.saveToolbarActivator"
        },
        "entity_action": {
            "type": "origins:execute_command",
            "command": "function seer:upgrade1"
        },
        "condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:scoreboard",
                    "objective": "seer_amethyst",
                    "comparison": ">=",
                    "compare_to": 4
                },
                {
                    "type": "origins:on_block",
                    "block_condition": {
                        "type": "origins:block",
                        "block": "minecraft:lodestone"
                    }
                },
                {
                    "type": "origins:distance_from_coordinates",
                    "offset": {
                        "x": 0,
                        "y": 0,
                        "z": 3
                    },
                    "comparison": "<",
                    "compare_to": 2,
                    "result_on_the_wrong_dimension": 999999
                }
            ]
        }
    },
